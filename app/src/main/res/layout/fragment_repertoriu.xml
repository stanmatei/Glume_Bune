<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mple.matei.glumebune.repertoriuFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/my_bg_anim"
        android:id="@+id/futema">


        <android.support.v7.widget.RecyclerView

            android:id="@+id/fav_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/adRep" />

        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adRep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="false"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-9142920140009248/8438051043">
        </com.google.android.gms.ads.AdView>
   </RelativeLayout>
</FrameLayout>

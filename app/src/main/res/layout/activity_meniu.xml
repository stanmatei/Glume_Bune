<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/fundal2"
    tools:context="com.mple.matei.glumebune.meniu">




    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adViewp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-9142920140009248/1192628298">
    </com.google.android.gms.ads.AdView>

    <ImageButton
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:src="@drawable/but6"
        android:onClick="perle"
        android:id="@+id/show_ad_button"
        android:layout_above="@+id/adViewp"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_marginBottom="32dp" />


    <ImageButton
        android:layout_width="140dp"
        android:layout_height="50dp"

        android:id="@+id/b2"
        android:src="@drawable/but1"
        android:onClick="original"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/adViewp"
        android:layout_alignStart="@+id/adViewp" />

    <ImageButton
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:src="@drawable/but4"
        android:onClick="clasic"
        android:id="@+id/button2"
        android:layout_alignTop="@+id/button3"
        android:layout_alignLeft="@+id/game"
        android:layout_alignStart="@+id/game" />

    <ImageButton
        android:layout_width="140dp"
        android:layout_height="50dp"

        android:id="@+id/button3"
        android:src="@drawable/but3"
        android:onClick="lungi"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/b2"
        android:layout_alignLeft="@+id/adViewp"
        android:layout_alignStart="@+id/adViewp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/b1"


        android:src="@drawable/but11"
        android:onClick="extra"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="140dp"
        android:layout_height="50dp"

        android:id="@+id/imagini"
        android:src="@drawable/but5"
        android:onClick="img"
        android:layout_alignTop="@+id/show_ad_button"
        android:layout_alignLeft="@+id/adViewp"
        android:layout_alignStart="@+id/adViewp" />

    <ImageButton
        android:layout_width="140dp"
        android:layout_height="50dp"

        android:onClick="game"

        android:id="@+id/game"
        android:src="@drawable/but2"


        android:layout_alignTop="@+id/b2"
        android:layout_alignLeft="@+id/b1"
        android:layout_alignStart="@+id/b1" />


</RelativeLayout>
